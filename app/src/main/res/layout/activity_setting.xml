<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="设置关机时间"/>
        <TimePicker
            android:id="@+id/timePickerDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TimePicker
            android:id="@+id/timePickerOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="设置开机时间"/>
    </LinearLayout>



    <Button
        android:id="@+id/btn_time"
        android:layout_centerHorizontal="true"
        android:text="确定定时重启时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btn_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="退出" />

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_out"
        android:layout_toStartOf="@+id/btn_out" />
    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安装更新程序并打开"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_out"
        android:layout_toEndOf="@+id/btn_out" />


</RelativeLayout>
